<section class="background background_large ration-variants" style="background-image: url( {{ options.single_ration_section_variant.background }} );">
	<div class="container">
		<h3 class="title-lg background__title">{{options.single_ration_section_variant.title}}</h3>
		<div class="row ration-variants__row">
			{% for variant in post.get_field('variants') %}
				<div class="variant col-12 col-sm-4">
					<div class="variant__content">
						<div class="variant__header">
							<p>{{variant.calories}} ккал</p>
						</div>
						<div class="variant__body">
							{{variant.meals}}
						</div>
					</div>
					<div class="variant__footer">
						<ul class="variant__prices">
							<li>
								<span class="variant__prices-time">1 день</span>
								<span class="variant__prices-price">{{variant.prices.day}} <sup>грн</sup></span>
							</li>
							<li>
								<span class="variant__prices-time">1 неделя</span>
								<span class="variant__prices-price">{{variant.prices.week}} <sup>грн</sup></span>
							</li>
							<li>
								<span class="variant__prices-time">2 недели</span>
								<span class="variant__prices-price">{{variant.prices.two_weeks}} <sup>грн</sup></span>
							</li>
							<li>
								<span class="variant__prices-time">1 месяц</span>
								<span class="variant__prices-price">{{variant.prices.one_month}} <sup>грн</sup></span>
							</li>
						</ul>
					</div>
				</div>
			{% endfor %}
		</div>
		
	</div>
</section>