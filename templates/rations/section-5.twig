<section class="background background_large" style="background-image: url( {{ post.get_field('section_5_image') }} );">
	<div class="container">
		<h3 class="title-lg background__title">{{post.get_field('section_5_title')}}</h3>
		<div class="row background__icons">
			{% for secret in post.get_field('section_5_icons') %}
				<div class="icon-column col-12 col-sm-6 col-md-3">
					<div class="icon icon_center">
						<div class="icon__header"><img class="icon__image" src={{secret.image}} alt=""></div>
						<p class="icon__title color-brand-2">{{secret.title}}</p>
						<div class="icon__content">{{secret.text}}</div>
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="row background__banner-row">
			<div class="col-12 col-lg-10">
				{{ function('banner_form', post.get_field('section_5_form_title'), '[contact-form-7 id="29" title="Контактная форма 1" button-hidden-text="Выбрать и заказать свой рацион"]', 'banner-form_transparent' )}}
			</div>
		</div>
	</div>
</section>